# Gateway (server)
# Standard creator chain uses shop invoke endpoint.
PIVOTA_AGENT_URL=https://pivota-agent-production.up.railway.app/agent/shop/v1/invoke
# Optional explicit base for /creator/* REST endpoints; derived from PIVOTA_AGENT_URL if empty.
PIVOTA_AGENT_BASE_URL=

# Single external key (recommended).
CREATOR_AGENT_API_KEY=
# Optional checkout override; if empty, falls back to CREATOR_AGENT_API_KEY.
CREATOR_CHECKOUT_AGENT_API_KEY=
# Optional checkout invoke override; if empty, falls back to PIVOTA_AGENT_URL.
CREATOR_CHECKOUT_AGENT_URL=
# Optional standard PDP host for creator product alias route (defaults to https://agent.pivota.cc).
CREATOR_STANDARD_PDP_BASE_URL=https://agent.pivota.cc

# Legacy compatibility keys (optional)
PIVOTA_AGENT_API_KEY=
AGENT_API_KEY=
SHOP_GATEWAY_AGENT_API_KEY=

# Optional client-side fallback for relative review-media URLs.
NEXT_PUBLIC_REVIEWS_UPSTREAM_BASE=https://web-production-fedb.up.railway.app

# Checkout providers (client)
# Stripe (optional)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Adyen (optional)
NEXT_PUBLIC_ADYEN_CLIENT_KEY=
NEXT_PUBLIC_ADYEN_ENVIRONMENT=test
